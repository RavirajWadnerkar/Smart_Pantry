<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Image View -->

    <!-- Cooking Time TextView -->

    <!-- Ingredients TextView -->

    <!-- Instructions TextView -->

    <ImageView
        android:id="@+id/recipeImageView"
        app:layout_constraintBottom_toTopOf="@id/cookingTimeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="236dp"
        android:layout_height="171dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pantry"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/cookingTimeTextView"
        app:layout_constraintBottom_toTopOf="@id/ingredientsTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipeImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cooking Time: 30 minutes"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="289dp" />

    <TextView
        android:id="@+id/ingredientsTextView"
        app:layout_constraintBottom_toTopOf="@id/instructionsTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cookingTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingredients: Ingredient 1, Ingredient 2, Ingredient 3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/instructionsTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ingredientsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instructions: Step 1, Step 2, Step 3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="382dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
